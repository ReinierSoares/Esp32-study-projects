void setup() {
  // Inicializa a comunicação com a tela OLED
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { 
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }

  // Limpa a tela
  display.clearDisplay();

  // Define a cor do texto (branco)
  display.setTextColor(SSD1306_WHITE);

  // Exibe o bitmap na tela
  display.drawBitmap(0, 0, wifi1_icon16x16, 16, 16, SSD1306_WHITE);
  display.drawBitmap(20, 0, home_icon16x16, 16, 16, SSD1306_WHITE);
